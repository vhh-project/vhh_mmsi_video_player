@require './common.styl'

.vhh-filmstrip-wrapper
  overflow auto
  white-space nowrap
  height 110px
  
.vhh-filmstrip-inner
  position relative
  height 100%

.vhh-filmstrip-thumb
  position absolute
  width 120px
  height 90px
  background-size contain
  
  &:not(:last-child)
    margin-right 2px
  
  .vhh-filmstrip-number
    position absolute
    left 0
    bottom -20px
    width 100%
    height 20px
    background-color $mainBackground
    color $textColor
    font-size 10px
    line-height 2em
    padding 0
    text-align center
    
  &.active
    .vhh-filmstrip-number
      background-color $primaryBackground
      color $primaryOtherColor